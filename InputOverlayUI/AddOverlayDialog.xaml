<Window x:Class="InputOverlayUI.AddOverlayDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add Input Overlay"
        Height="600" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="550" MinWidth="600"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Configure Input Overlay"
                   FontSize="20" FontWeight="Medium"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="0,0,0,16">
                <!-- Name Input Section -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Overlay Name"
                                   FontWeight="Medium"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="NameTextBox"
                                 materialDesign:HintAssist.Hint="Enter overlay name (e.g., WASD Keys)"
                                 Text="{Binding OverlayName, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="14"
                                 Padding="8"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Image Selection Section -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Preset Image"
                                   FontWeight="Medium"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="ImagePathTextBox"
                                     Grid.Column="0"
                                     materialDesign:HintAssist.Hint="Select overlay image file"
                                     Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="14"
                                     Padding="8"
                                     IsReadOnly="True"
                                     Margin="0,0,8,0"/>

                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Click="BrowseImageButton_Click"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="4"
                                    Width="100"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Config File Selection Section -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Configuration File"
                                   FontWeight="Medium"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="ConfigPathTextBox"
                                     Grid.Column="0"
                                     materialDesign:HintAssist.Hint="Select configuration JSON file"
                                     Text="{Binding ConfigPath, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="14"
                                     Padding="8"
                                     IsReadOnly="True"
                                     Margin="0,0,8,0"/>

                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Click="BrowseConfigButton_Click"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="4"
                                    Width="100"/>
                        </Grid>

                        <!-- Config File Info -->
                        <TextBlock x:Name="ConfigInfoTextBlock"
                                   Text="Select a JSON configuration file that defines the overlay elements and their positions."
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Cancel"
                    Click="CancelButton_Click"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    materialDesign:ButtonAssist.CornerRadius="4"
                    Width="100"
                    Margin="0,0,8,0"/>

            <Button x:Name="OkButton"
                    Content="Add Overlay"
                    Click="OkButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="4"
                    Width="120"
                    IsEnabled="{Binding IsValid}">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource Primary500}"/>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>